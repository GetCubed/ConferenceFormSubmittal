@model IEnumerable<ConferenceFormSubmittal.Models.Application>

@{
    ViewBag.Title = "Index";
}


<!--HEADING-->
<div class="row pt-3">
    <div class="col-12">
        <div class="card card-header bg-NCDSB-Grey">
            <h3 class="text-center">My Applications</h3>
        </div>
    </div>
</div>


<div class="row pt-3">
    <div class="col-3">

        <div class="card card-body bg-NCDSB-Grey pb-2">
            @Html.ActionLink("Create New", "Index", "Conferences", null, new { @class = "btn btn-primary btn-block mb-3" })
        </div>

        <div class="card mt-3">
            <div class="card-body bg-NCDSB-Grey">


                <b>Start Date</b>
                <input type="date" class="form-control">

                <b>End Date</b>
                <input type="date" class="form-control">

                <b>Conference</b>
                <input type="text" class="form-control">

                <b>Status</b>
                <select name="status" class="d-block">
                    <option selected>Submitted  </option>
                    <option>Denied </option>
                    <option>Approved</option>
                    <option>Draft</option>
                </select>
            </div>

            <div class="card-footer bg-NCDSB-Grey">
                <button type="button" class="btn btn-primary btn-block">Search</button>
            </div>
        </div>

        


    </div>

    <div class="col-9">
        <!--Panel-->
        <div class="card card-body bg-NCDSB-Grey ">
            
            <table class="table">
                <tr>
                    <th>
                        <b>@Html.DisplayNameFor(model => model.Conference.Name)</b>
                    </th>
                    <th>
                        <b>@Html.DisplayNameFor(model => model.DateSubmitted)</b>
                    </th>
                    <th>
                        <b>Status @*@Html.DisplayNameFor(model => model.Status.Description)*@</b>
                    </th>
                    <th></th>
                </tr>

                @{ int i = 0;}

                @for (int c = 0; c < 5; c++)
        {

            foreach (var item in Model)
            {
                i++;

                <tr class="
                @(item.StatusID == 1 ? "rgba-green-light" : "")
                @(item.StatusID == 2 ? "rgba-black-light" : "")
                @(item.StatusID == 3 ? "" : "")
                @(item.StatusID == 4 ? "gba-yellow-light" : "")
                ">

                    <td>
                        @Html.DisplayFor(modelItem => item.Conference.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateSubmitted)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status.Description)
                    </td>
                    <td>



                        @if (item.StatusID == 1)
    {
                    @Html.ActionLink("View", "Details", new { id = item.ID }, new { @class = "badge badge-primary bg-NCDSB-Blue text-white" })
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "badge badge-primary invisible mx-1" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "badge badge-danger mx-1 invisible" })
}

                        @if (item.StatusID == 2)
    {
                    @Html.ActionLink("View", "Details", new { id = item.ID }, new { @class = "badge badge-primary bg-NCDSB-Blue text-white" })
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "badge badge-primary invisible mx-1" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "badge badge-danger mx-1" })
}
                        @if (item.StatusID == 3)
    {
                    @Html.ActionLink("View", "Details", new { id = item.ID }, new { @class = "badge badge-primary bg-NCDSB-Blue text-white invisible" })
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "badge badge-primary mx-1" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "badge badge-danger mx-1" })
}
                        @if (item.StatusID == 4)
    {
                    @Html.ActionLink("View", "Details", new { id = item.ID }, new { @class = "badge badge-primary bg-NCDSB-Blue text-white" })
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "badge badge-primary invisible mx-1" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "badge badge-danger mx-1" })
}


                    </td>
                </tr>

    }


}



            </table>

        </div>
        <!--/.Panel-->




    </div>
</div>

