@model IEnumerable<ConferenceFormSubmittal.Models.Site>
@using ConferenceFormSubmittal.Utilities;

@{
    ViewBag.Title = "Index";
}

<!--HEADING-->
<div class="row pt-3">
    <div class="col-12">
        <div class="card card-header bg-NCDSB-Grey">
            <h3 class="text-center font-weight-bold">Sites</h3>
        </div>
    </div>
</div>

<div class="row pt-3">
    <div class="col-12">

        <div class="card bg-NCDSB-Grey">
            <div class="card-header d-flex justify-content-between">

                <a href='@Url.Action("Index", "Home")' class="btn btn-primary">
                    @Helper.GetIcon(Icons.Back) Go Back
                </a>

                <a href='@Url.Action("Create", "Sites")' class="btn btn-primary">
                    @Helper.GetIcon(Icons.Create) Create New
                </a>

                <a href='#' class="btn btn-primary">
                    @Helper.GetIcon(Icons.Filter) Filter
                </a>
            </div>
        </div>

    </div>
</div>


@*--------------------------Sites ----------------------------------------*@
