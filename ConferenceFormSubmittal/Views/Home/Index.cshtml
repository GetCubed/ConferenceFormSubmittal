@using ConferenceFormSubmittal.Utilities;
@{
    ViewBag.Title = "Home Page";
}



<div class="row">
    @if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Admin"))
        {
            //-----------------Notification BAR --------------------------------
            <div class="col-12 px-0">

                <div class="card-footer bg-NCDSB-GreyLight ">

                    <div class="row">
                        <div class="col-12 justify-content-end d-flex">
                            @if (ViewBag.NewApplications > 0)
                            {
                                <a href='@Url.Action("IndexAdmin", "Applications")' class="btn btn-success">
                                    @Helper.GetIcon(Icons.View)
                                    @if (ViewBag.NewApplications == 1)
                                    {
                                        @ViewBag.NewApplications @: application needs review
            }
                                    else
                                    {
                                        @ViewBag.NewApplications @: applications need review
            }
                                </a>
                            }
                            @if (ViewBag.Denied > 0)
                            {
                                <a href='/Applications/Index?StatusID=3' class="btn btn-danger">
                                    @Helper.GetIcon(Icons.Denied)
                                    Application Denied
                                </a>
                            }
                        </div>
                    </div>

                </div>
            </div>
        }



        <div class="card-deck px-4 py-4 ">

            <!--Card-->
            <div class="card bg-NCDSB-Grey col-4 px-0">

                <!--Card image-->
                <img class="img-fluid" src="~/Images/bookconference.jpeg" alt="Card image cap">

                <!--Card content-->
                <div class="card-body">
                    <!--Title-->
                    <h4 class="card-title">Start A Conference Application</h4>
                    <!--Text-->
                    <p class="card-text">Select a conference and begin a new conference application. You may save the application as a draft and complete the application later. </p>

                </div>

                <div class="card-footer text-center">
                    <a href="~/Conferences/Index" class="btn btn-primary">Start An Application</a>
                </div>

            </div>
            <!--/.Card-->
            <!--Card-->
            <div class="card bg-NCDSB-Grey">

                <!--Card image-->
                <img class="img-fluid" src="~/Images/trackmileage.jpeg" alt="Card image cap">

                <!--Card content-->
                <div class="card-body">
                    <!--Title-->
                    <h4 class="card-title">Track Your Mileage</h4>
                    <!--Text-->
                    <p class="card-text">Begin a mileage form and track your mileage</p>

                </div>
                <div class="card-footer text-center">
                    <a href="~/Mileages/Create" class="btn btn-primary">Submit A Mileage Form</a>
                </div>

            </div>
            <!--/.Card-->
            <!--Card-->
            <div class="card bg-NCDSB-Grey">

                <!--Card image-->
                <img class="img-fluid" src="~/Images/myconferences.jpeg" alt="Card image cap">

                <!--Card content-->
                <div class="card-body">
                    <!--Title-->
                    <h4 class="card-title">My Applications</h4>
                    <!--Text-->
                    <p class="card-text">View your conference applications. You may even view draft applications to complete.</p>

                </div>
                <div class="card-footer text-center">
                    <a href="~/Applications/Index" class="btn btn-primary">View Applications</a>
                </div>

            </div>
            <!--/.Card-->

        </div>
    }
    else
    {
        <div>
            @{Response.Redirect(Url.Action("Login", "Account")); }
        </div>
    }



</div>