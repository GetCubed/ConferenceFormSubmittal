@model ConferenceFormSubmittal.Models.Expense

@{
    ViewBag.Title = "Edit";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ID)

    <!--HEADING-->
    <div class="row pt-3">
        <div class="col-12">
            <div class="card card-header bg-NCDSB-Grey">
                <h3 class="text-center">Evaluate Expense</h3>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>



    <div class="row mt-3">
        <div class="col-3">
            <div class="card card-body bg-NCDSB-Grey">
                <div class="col-12">
                    <input type="submit" value="Approve" class="btn btn-primary btn-block mt-3" />
                    <input type="submit" value="Deny" class="btn btn-danger btn-block mt-3" />
                    <a href="~/Applications/Details/1" class="btn btn-primary btn-block mb-4">Back To Application</a>
                    @*@Html.ActionLink("Back to List", "Index", "Expenses", null, new { @class = "btn btn-primary btn-block mt-3" })*@
                </div>
            </div>
        </div> <!--col-->

        <div class="col-9">
            <div class="card card-body bg-NCDSB-Grey">
                <div class="col-12">
                    <div class="row">
                        <div class="col-6">
                            <b class="d-block mt-3">Employee Name</b>
                            @Html.DisplayFor(model => model.Application.Employee.FullName)

                            <b class="d-block mt-3">Application</b>
                            @Html.DisplayFor(model => model.Application.Rationale)

                            <b class="d-block mt-2">Expense Type</b>
                            @Html.DisplayFor(model => model.ExpenseType.Description)
                        </div>
                        <div class="col-6">
                            <b class="d-block mt-2">Estimateed Cost</b>
                            @Html.DisplayFor(model => model.EstimatedCost)

                            <b class="d-block mt-2">Actual Cost</b>
                            @Html.DisplayFor(model => model.ActualCost)
                         
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <b class="d-block mt-2">Rationale</b>
                            @Html.DisplayFor(model => model.Rationale)

                            <b class="d-block mt-2">Feedback</b>
                            @Html.EditorFor(model => model.Feedback, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Feedback, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div> <!--col-->
    </div>



}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
