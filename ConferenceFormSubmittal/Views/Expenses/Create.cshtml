@model ConferenceFormSubmittal.Models.Expense

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    <!--HEADING-->
    <div class="row pt-3">
        <div class="col-12">
            <div class="card card-header bg-NCDSB-Grey">
                <h3 class="text-center">Create Expense</h3>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>


    @Html.AntiForgeryToken()

    <div class="row mt-3">

        <div class="col-3">
            <div class="card card-body bg-NCDSB-Grey">
                <div class="col-12">
                    <input type="submit" value="Add Expense" class="btn btn-primary btn-block mb-4" />
                    <a href="~/Applications/Details/1" class="btn btn-primary btn-block mb-4">Back To Application</a>
                    @*@Html.ActionLink("Back to List", "Index", "Applications", null, new { @class = "btn btn-primary btn-block mb-3" })*@
                </div>
            </div>
        </div> <!--col-->


        <div class="col-9">
            <div class="row mb-3">
                <div class="col-12">
                    <div class="card card-body bg-NCDSB-Grey">
                        <div class="row">
                            <div class="col-6">
                                <b>Conference</b>
                                @Html.DropDownList("ApplicationID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ApplicationID, "", new { @class = "text-danger" })

                                <b>Expense Type</b>
                                @Html.DropDownList("ExpenseTypeID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ExpenseTypeID, "", new { @class = "text-danger" })


                            </div>
                            <div class="col-6">
                                <b>Estimated Cost</b>
                                @Html.EditorFor(model => model.EstimatedCost, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.EstimatedCost, "", new { @class = "text-danger" })

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="card card-body bg-NCDSB-Grey">
                        <b>Rationale</b>
                        @Html.EditorFor(model => model.Rationale, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Rationale, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        </div> <!--col-->

    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}





