@model ConferenceFormSubmittal.Models.Expense

@{
    ViewBag.Title = "Details";
}

<!--HEADING-->
<div class="row pt-3">
    <div class="col-12">
        <div class="card card-header bg-NCDSB-Grey">
            <h3 class="text-center">Expense Details</h3>
        </div>
    </div>
</div>

<div class="row mt-3">

    <div class="col-3">
        <div class="card card-body bg-NCDSB-Grey">
            <div class="col-12">
                @Html.ActionLink("Delete", "Delete", new { id = Model.ID }, new { @class = "btn btn-primary btn-block mt-3" })

                <a href="~/Applications/Details/1" class="btn btn-primary btn-block mt-3">Back To List</a>
            </div>
        </div>
    </div> <!--col-->

    <div class="col-9">
        <div class="row">
            <div class="col-12">
                <div class="card-group">

                    <div class="card card-body bg-NCDSB-Grey mr-2">
                        <b class="d-block mt-2 ">Type</b>
                        @Html.DisplayFor(model => model.ExpenseType.Description)

                        <b class="d-block mt-2 ">Payment Type</b>
                        @*@Html.DisplayFor(model => model.ExpenseType.Description)*@
                        Credit Card
                    </div>

                    <div class="card card-body bg-NCDSB-Grey ml-2">
                        <b class="d-block mt-2">Estimated Cost</b>
                       
                        @Html.DisplayFor(model => model.EstimatedCost)


                        <b class="d-block mt-2">Actual Cost</b>
                       
                        @Html.DisplayFor(model => model.ActualCost)

                    </div>
                </div>
            </div>


        </div>
        <div class="row">
            <div class="col-12">
                <div class="card card-body bg-NCDSB-Grey mt-3">
                    <div class="col-12">
                        <b class="d-block mt-2">Rationale</b>
                        @Html.DisplayFor(model => model.Rationale)


                        <b class="d-block mt-2">Feedback</b>
                        @Html.DisplayFor(model => model.Feedback)

                    </div>
                </div>
            </div>
        </div> 


    </div> <!--col-->
</div>